int superDigit(string n, int k) {
    long long int sum=0;
    for(int i=0;i<n.length();i++)
    {        
        int value = n[i]-'0';
        sum+=value;
    }
    sum*=k;
    while(sum>9)
    {
        long long int newSum=0;
        while(sum)
        {
            int rem = sum%10;
            newSum +=rem;
            sum/=10;
        }
        sum = newSum;
    }
    return sum;
}
